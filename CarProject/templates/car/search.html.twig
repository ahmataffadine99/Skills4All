{% extends 'base.html.twig' %}

{% block body %}
    {% block content %}
        <h1 class="p-3 bg-primary text-white rounded">Rechercher des voitures</h1>

        <div class="container mt-4">
          <div class="row">
            <div class="col-md-6">
              {{ form_start(form) }}
              <div class="mb-3">
                {{ form_row(form.field_name, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="mb-3">
                {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
              </div>
              <button type="submit" class="btn btn-primary">Rechercher</button>
              {{ form_end(form) }}
            </div>
          </div>

          <div class="row mt-4">
            <div class="col-md-12">
              <h2>Résultats de la recherche :</h2>

              {% if pagination.getTotalItemCount() > 0 %}
                <ul class="list-group">
                  {% for car in pagination %}
                    <li class="list-group-item">{{ car.name }} ({{ car.category.name }})</li>
                  {% endfor %}
                </ul>
              {% else %}
                <p>Aucune voiture trouvée.</p>
              {% endif %}
            </div>
          </div>
        </div>
    {% endblock %}
{% endblock %}
