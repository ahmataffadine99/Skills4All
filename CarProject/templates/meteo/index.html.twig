{% extends 'base.html.twig' %}

{% block body %}
{% block javascripts %}
<script>
window.onload = function() {
    setInterval(function() {
        fetch('/meteo') // l'URL de votre endpoint qui retourne la température
            .then(response => response.json())
            .then(data => {
                document.getElementById('temperature').innerHTML = data.temperature + '°C';
            });
    }, 3600000); // toutes les heures
}
</script>
{% endblock %}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mt-5">
                <div class="card-body">
                    <p class="card-text text-center">
    Température : <strong id="temperature">{{ temperature }}°C</strong>
</p>

            </div>
        </div>
    </div>
</div>

{% endblock %}
